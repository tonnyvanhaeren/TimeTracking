@model TimeTracking.IdSrv.UI.Register.RegisterViewModel

<div class="Register-page">
    <div class="page-header">
        <h1>Register</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Local Register</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Register">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GivenName"></label>
                                <input class="form-control" placeholder="Given Name" asp-for="GivenName" autofocus>
                                <span asp-validation-for="GivenName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FamilyName"></label>
                                <input class="form-control" placeholder="Family Name" asp-for="FamilyName" autofocus>
                                <span asp-validation-for="FamilyName" class="text-danger"></span>
                            </div>
                            @*<div class="form-group">
                                <label asp-for="BirthDate"></label>
                                <input class="form-control" placeholder="BirthDate (optional)" asp-for="BirthDate" autofocus>
                            </div>*@
                            @*<div class="form-group">
                                <label asp-for="Gender"></label>
                                <input class="form-control" placeholder="Gender (optional)" asp-for="Gender" autofocus>
                            </div>*@
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Password confirmation" asp-for="ConfirmPassword" autocomplete="off">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
                @*<ul class="list-unstyled">
                        <li ng-repeat="link in model.additionalLinks"><a ng-href="{{link.href}}">{{link.text}}</a></li>
                    </ul>*@
            </div>
        </div>
        <div class="col-md-6 col-sm-6 external-providers" ng-show="model.externalProviders.length">
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
